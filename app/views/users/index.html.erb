<div class = "container px-5 px-sm-0">
  <div class = "row">
    <!--左側-->
    <%= render 'books/UserInfo', user: @user, new_book: @new_book %>
    <!--右側-->
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table>
        <tbody>
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th></th>
          </tr>
          <% @all_users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "img/no_image-icon.jpg" %></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>