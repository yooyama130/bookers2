<div class="container">
  <div class="row">
    <div class="mx-auto col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h1>Editng Book</h1>
      <%= form_with model: @book, local: true do |f| %>
       <div class = "form-group">
         <label>Title</label>
         <%= f.text_field :title, class: "post-form" %>
       </div>
       <div class = "form-group">
         <label>Opnion</label>
         <%= f.text_area :body, class: "post-form"  %>
       </div>
       <div class = "form-group">
         <%= f.submit "Update Book", class: "btn btn-success", method: :update %>
       </div>
     <% end %>
     <p><%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %></p>
    </div>
  </div>
</div>