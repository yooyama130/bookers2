<div class = "container px-5 px-sm-0">
  <!--エラーメッセージ-->
  <% if @new_book.errors.any? %>
    <div class = "error_explanation">
      <h3><%= @new_book.errors.count %> errors prohibited this obj from being saved:</h3>
      <ul>
        <% @new_book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class = "row">
    <!--左側-->
    <%= render 'books/UserInfo', user: @user, new_book: @new_book %>
    <!--右側-->
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table>
        <tbody>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
          <% @all_books.each do |book| %>
            <tr>
              <th>
              <%= link_to user_path(book.user) do %>
                <%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, size:'50x50', format: 'jpeg', fallback: "img/no_image-icon.jpg" %>
              <% end %>
              </th>
              <th><%= link_to book.title, book_path(book) %></th>
              <th><%= book.body %></th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
