<div class = "container px-5 px-sm-0">
  <div class = "row">
    <!--左側-->
    <div class = "col-md-3">
        <!--ユーザーの情報-->
        <h2>User Info</h2>
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "img/no_image.jpg" %>
        <table>
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.body %></th>
            </tr>
          </tbody>
        </table>
        <div class = "row">
          <a class = "btn mb-3 btn-outline-secondary btn-block" href = "#"><i class="fas fa-user-cog"></i></a>
        </div>
        <!--本の新規投稿フォーム-->
        <h2>New book</h2>
        <%= form_with model: @book, local: true do |f| %>
          <div class = "form-group">
            <label>Title</label>
            <%= f.text_field :title, class: "post-form" %>
          </div>
          <div class = "form-group">
            <label>Opnion</label>
            <%= f.text_area :body, class: "post-form"  %>
          </div>
          <div class = "form-group">
            <%= f.submit "Create Book", class: "btn btn-success" %>
          </div>
        <% end %>
    </div>
    <!--右側-->
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table>
        <tbody>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
          <% @all_books.each do |book| %>
            <tr>
              <th>
              <%= link_to user_path(book.user) do %>
                <%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "img/no_image.jpg" %>
              <% end %>
              </th>
              <th><%= link_to book.title, book_path(book) %></th>
              <th><%= book.body %></th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
