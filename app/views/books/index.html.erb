<div class = "container px-5 px-sm-0">
  <div class = "row">
    <!--左側-->
    <%= render 'books/UserInfo', user: @user, new_book: @new_book %>
    <!--右側-->
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table>
        <tbody>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
          <% @all_books.each do |book| %>
            <tr>
              <th>
              <%= link_to user_path(book.user) do %>
                <%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "img/no_image.jpg" %>
              <% end %>
              </th>
              <th><%= link_to book.title, book_path(book) %></th>
              <th><%= book.body %></th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
