 <!--サイトの左側-->
 <div class = "col-md-3">
     <!--ユーザーの情報-->
     <h2>User info</h2>
     <% if user.profile_image.attached? %>
      <%= image_tag user.profile_image.variant(resize:'100x100') %>
     <% else %>
      <%= image_tag 'img/no_image.jpg' %>
     <% end %>
     <table>
       <tbody>
         <tr></tr>
         <tr>
           <th>name</th>
           <th><%= user.name %></th>
         </tr>
         <tr>
           <th>introduction</th>
           <th><%= user.introduction %></th>
         </tr>
       </tbody>
     </table>
     <div class = "row">
        <%= link_to edit_user_path(user), class: "btn mb-3 btn-outline-secondary btn-block" do %>
         <i class="fas fa-user-cog"></i>
        <% end %>
     </div>
     <!--本の新規投稿フォーム-->
     <h2>New book</h2>
     <%= form_with model: new_book, local: true do |f| %>
       <div class = "form-group">
         <label>Title</label>
         <%= f.text_field :title, class: "post-form" %>
       </div>
       <div class = "form-group">
         <label>Opnion</label>
         <%= f.text_area :body, class: "post-form"  %>
       </div>
       <div class = "form-group">
         <%= f.submit "Create Book", class: "btn btn-success" %>
       </div>
     <% end %>
 </div>