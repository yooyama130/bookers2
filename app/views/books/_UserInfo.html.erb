 <!--サイトの左側-->
 <div class = "col-md-3">
     <!--ユーザーの情報-->
     <h2>User Info</h2>
     <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "img/no_image.jpg" %>
     <table>
       <tbody>
         <tr></tr>
         <tr>
           <th>name</th>
           <th><%= user.name %></th>
         </tr>
         <tr>
           <th>introduction</th>
           <th><%= user.introduction
           %></th>
         </tr>
       </tbody>
     </table>
     <div class = "row">
       <!--表示されているユーザーとログインしているユーザーが一致するか、しないかで変わる-->
       <% if user == current_user %>
        <!--一致すればプロフィール編集へ-->
        <%= link_to edit_user_path(user), class: "btn mb-3 btn-outline-secondary btn-block" do %>
         <i class="fas fa-user-cog"></i>
        <% end %>
       <% else %>
        <!--一致しなければログインユーザーのshow画面へ-->
        <%= link_to user_path(current_user), class: "btn mb-3 btn-outline-secondary btn-block" do %>
         <i class="fas fa-user-cog"></i>
        <% end %>
       <% end %>
     </div>
     <!--本の新規投稿フォーム-->
     <h2>New book</h2>
     <%= form_with model: new_book, local: true do |f| %>
       <div class = "form-group">
         <label>Title</label>
         <%= f.text_field :title, class: "post-form" %>
       </div>
       <div class = "form-group">
         <label>Opnion</label>
         <%= f.text_area :body, class: "post-form"  %>
       </div>
       <div class = "form-group">
         <%= f.submit "Create Book", class: "btn btn-success" %>
       </div>
     <% end %>
 </div>